<?xml version="1.0" encoding="utf-8"?>
<com.qiantao.coordinatormenu.MainView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#fff">

    <ac.scri.com.donghaoproect.view.CommnetViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ac.scri.com.donghaoproect.view.CommnetViewPager>

    <RelativeLayout
        android:id="@+id/regionView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/viewpager"
        android:layout_marginTop="10dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_control_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_control_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="101dp"
            android:layout_marginLeft="101dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_control_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_control_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_todo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/regionView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="done"
        android:text="操作"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="action"
        android:layout_alignBottom="@+id/tv_todo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-28dp"
        android:layout_marginLeft="-28dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="描点走起" />


</com.qiantao.coordinatormenu.MainView>