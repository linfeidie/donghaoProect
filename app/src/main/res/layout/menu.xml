<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#9ED5E4"/>
    <ac.scri.com.donghaoproect.IPEditText
        android:id="@+id/ipAddressFrom"
        android:layout_width="280dp"
        android:layout_height="100dp"
      />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:text="工作模式"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="电量"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="电压"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="线速度"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="角速度"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="充电状态"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="小车编号"
              android:layout_height="match_parent" />
          <TextView
              android:layout_width="match_parent"
              android:text="222"
              android:layout_height="match_parent" />
      </LinearLayout>
  </ScrollView>


</LinearLayout>